{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4318",
    "TracingEnabled": true,
    "MetricsEnabled": true,
    "LoggingEnabled": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=propertea_identity;Username=postgres;Password=postgres"
  },
  "IdentitySettings": {
    "RequireConfirmedAccount": true,
    "Password": {
      "RequireDigit": true,
      "RequiredLength": 8,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true,
      "RequireLowercase": true
    }
  },
  "JwtSettings": {
    "Secret": "A_VERY_SECRET_KEY_THAT_IS_LONG_ENOUGH_TO_BE_SECURE_CHANGE_IN_PRODUCTION",
    "Issuer": "ProperTea.Identity.Service",
    "Audience": "ProperTea.BFFs",
    "DurationInMinutes": 15
  },
  "GoogleAuthSettings": {
    "ClientId": "YOUR_GOOGLE_CLIENT_ID",
    "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
  }
}