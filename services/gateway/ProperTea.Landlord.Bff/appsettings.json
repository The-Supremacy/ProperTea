{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "ServiceEndpoints": {
    "Identity": "https://identity.propertea.dev"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-login-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/login",
          "Methods": [
            "POST"
          ]
        },
        "Metadata": {
          "LoginTransform": "true"
        },
        "Order": 1
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Order": 2
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://propertea-identity"
          }
        }
      }
    }
  }
}
