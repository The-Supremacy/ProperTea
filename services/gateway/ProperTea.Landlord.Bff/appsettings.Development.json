{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "ProperTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4318",
    "OtlpHeaders": "",
    "MetricsEnabled": true,
    "TracingEnabled": true,
    "LoggingEnabled": true
  },
  "Authentication": {
    "External": {
      "Authority": "https://identity",
      "Issuer": "https://identity"
    },
    "Internal": {
      "Issuer": "https://gateway",
      "KeyIds": "gateway-dev-2024-01,gateway-dev-2024-02",
      "UseDeterministicKeys": true
    }
  },
  "Services": {
    "Authorization": {
      "BaseUrl": "http://authorization"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "organizations": {
        "Destinations": {
          "destination1": {
            "Address": "http://organizations"
          }
        }
      },
      "companies": {
        "Destinations": {
          "destination1": {
            "Address": "http://companies"
          }
        }
      },
      "property": {
        "Destinations": {
          "destination1": {
            "Address": "https://property.local"
          }
        }
      }
    }
  }
}
