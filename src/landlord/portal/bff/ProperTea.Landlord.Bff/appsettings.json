{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "propertea-apps-redis:6379"
  },
  "OIDC": {
    "Authority": "https://auth.propertea.com",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret"
  },
  "ReverseProxy": {
    "Routes": {
      "organizations-route": {
        "ClusterId": "organizations-cluster",
        "Match": {
          "Path": "/api/organizations/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/organizations" },
          { "X-Forwarded": "Set" }
        ]
      }
    },
    "Clusters": {
      "organizations-cluster": {
        "Destinations": {
          "primary": {
            "Address": "http://organization-api"
          }
        },
        "HttpRequest": {
          "ActivityTimeout": "00:02:00"
        }
      }
    }
  }
}
