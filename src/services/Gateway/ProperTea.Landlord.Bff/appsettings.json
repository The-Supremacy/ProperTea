{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "OpenTelemetry": {
        "LoggingEnabled": true,
        "MetricsEnabled": true,
        "TracingEnabled": true,
        "OtlpEndpoint": "http://localhost:4317"
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "properties-route": {
                "ClusterId": "properties-cluster",
                "AuthorizationPolicy": "RequireAuthorization",
                "Match": {
                    "Path": "/api/{orgId}/properties/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "properties-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://property-api:8080"
                    }
                }
            }
        }
    }
}
