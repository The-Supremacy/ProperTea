{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "Database": "Host=localhost;Port=5432;Database=propertea_organization_db;Username=admin;Password=admin;",
        "RabbitMq": "amqp://guest:guest@localhost:5672"
    },
    "ProperTeaAuth": {
        "Authority": "https://auth.propertea.localhost/application/o/propertea-organization/",
        "Audience": "propertea-organization-api",
        "RequireHttps": false,
        "InternalMetadataAddress": "http://authentik-server:9000/application/o/propertea-organization/.well-known/openid-configuration"
    },
    "ProperTeaOpenApi": {
        "AuthorizationUrl": "https://auth.propertea.localhost/application/o/authorize/",
        "TokenUrl": "https://auth.propertea.localhost/application/o/token/",
        "ClientId": "propertea-organization-api",
        "Scopes": [ "openid", "profile", "email" ]
    },
    "OpenTelemetry": {
        "LoggingEnabled": true,
        "MetricsEnabled": true,
        "TracingEnabled": true,
        "OtlpEndpoint": "http://localhost:4317"
    }
}
